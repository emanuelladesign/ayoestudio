        // --- COMPONENTES AUXILIARES ---
        const Reveal = ({ children, delay = 0 }) => {
            const [isVisible, setIsVisible] = useState(false);
            const ref = useRef(null);

            useEffect(() => {
                const observer = new IntersectionObserver(
                    ([entry]) => {
                        if (entry.isIntersecting) {
                            setIsVisible(true);
                            observer.unobserve(entry.target);
                        }
                    },
                    { threshold: 0.1 }
                );
                if (ref.current) observer.observe(ref.current);
                return () => { if (ref.current) observer.disconnect(); };
            }, []);

            return (
                <div ref={ref} style={{ transitionDelay: `${delay}ms` }} className={`transition-all duration-1000 transform ${isVisible ? 'opacity-100 translate-y-0' : 'opacity-0 translate-y-12'}`}>
                    {children}
                </div>
            );
        };

        const FaqItem = ({ question, answer }) => {
            const [isOpen, setIsOpen] = useState(false);
            return (
                <div className="mb-4">
                    <button onClick={() => setIsOpen(!isOpen)} className={`w-full py-5 px-8 flex justify-between items-center text-left transition-all duration-300 rounded-2xl border ${isOpen ? 'bg-[#2d0f45] border-pink-500 shadow-[0_0_20px_rgba(236,72,153,0.2)]' : 'bg-[#150826] border-white/10 hover:border-pink-500/50'}`}>
                        <span className={`text-lg font-bold ${isOpen ? 'text-white' : 'text-gray-300'}`}>{question}</span>
                        {isOpen ? <Icons.ChevronUp className="text-pink-500" /> : <Icons.ChevronDown className="text-gray-500" />}
                    </button>
                    <div className={`overflow-hidden transition-all duration-500 ease-in-out ${isOpen ? 'max-h-96 opacity-100 mt-4' : 'max-h-0 opacity-0 mt-0'}`}>
                        <div className="p-6 bg-[#1a0b2e]/50 rounded-2xl border border-white/5 text-gray-300 leading-relaxed font-light">{answer}</div>
                    </div>
                </div>
            );
        };

